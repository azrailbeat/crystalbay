<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Обращения клиентов - Crystal Bay Tours</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        /* Include the same CSS variables and styling from layout.ejs */
        :root {
            --primary-color: #0071e3;
            --secondary-color: #86868b;
            --background-color: #f5f5f7;
            --card-background: #ffffff;
            --success-color: #34c759;
            --danger-color: #ff3b30;
            --warning-color: #ff9500;
            --info-color: #5ac8fa;
            --border-radius: 10px;
            --text-color: #1d1d1f;
            --light-border: #e6e6e6;
            --light-accent: #f2f2f2;
            --sidebar-bg: #f4f4f5;
            --sidebar-active: #e1f0ff;
            --card-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            line-height: 1.6;
            background-color: var(--background-color);
            color: var(--text-color);
        }
        
        /* Simplified layout for individual pages */
        .page-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }
        
        .page-header {
            margin-bottom: 2rem;
        }
        
        .card {
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            border: 1px solid var(--light-border);
            background-color: var(--card-background);
            margin-bottom: 20px;
        }
        
        .btn {
            border-radius: var(--border-radius);
            padding: 0.5rem 1.2rem;
            transition: all 0.2s ease;
            font-weight: 500;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }
        
        .badge {
            padding: 0.4em 0.8em;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.75rem;
        }
        
        .table {
            border-radius: var(--border-radius);
            overflow: hidden;
        }
        
        .table thead th {
            background-color: var(--light-accent);
            border-bottom: 1px solid var(--light-border);
            font-weight: 600;
            color: var(--secondary-color);
        }
        
        .table tbody tr:hover {
            background-color: rgba(0, 113, 227, 0.03);
        }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1>Обращения клиентов</h1>
                    <p class="text-muted">Управление лидами и обращениями клиентов</p>
                </div>
                <div>
                    <a href="/dashboard" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> К дашборду
                    </a>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLeadModal">
                        <i class="bi bi-plus"></i> Добавить лид
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Leads Table -->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-people-fill me-2"></i>
                    Все обращения (<%= leads ? leads.length : 0 %>)
                </h5>
            </div>
            <div class="card-body p-0">
                <% if (leads && leads.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Клиент</th>
                                <th>Контакты</th>
                                <th>Интерес</th>
                                <th>Источник</th>
                                <th>Статус</th>
                                <th>Дата создания</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% leads.forEach(function(lead) { %>
                            <tr>
                                <td>
                                    <strong><%= lead.customer_name || 'Не указан' %></strong>
                                    <% if (lead.notes) { %>
                                    <br><small class="text-muted"><%= lead.notes.substring(0, 50) %><% if (lead.notes.length > 50) { %>...<% } %></small>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (lead.customer_phone && lead.customer_phone !== 'Не указан') { %>
                                    <div><i class="bi bi-telephone"></i> <%= lead.customer_phone %></div>
                                    <% } %>
                                    <% if (lead.customer_email && lead.customer_email !== 'Не указан') { %>
                                    <div><i class="bi bi-envelope"></i> <%= lead.customer_email %></div>
                                    <% } %>
                                </td>
                                <td><%= lead.interest || 'Общий интерес' %></td>
                                <td>
                                    <% if (lead.source === 'website') { %>
                                    <span class="badge bg-primary">Сайт</span>
                                    <% } else if (lead.source === 'telegram') { %>
                                    <span class="badge bg-info">Telegram</span>
                                    <% } else if (lead.source === 'phone') { %>
                                    <span class="badge bg-success">Телефон</span>
                                    <% } else { %>
                                    <span class="badge bg-secondary"><%= (lead.source || 'Неизвестно').charAt(0).toUpperCase() + (lead.source || 'Неизвестно').slice(1) %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (lead.status === 'new') { %>
                                    <span class="badge bg-primary">Новый</span>
                                    <% } else if (lead.status === 'contacted') { %>
                                    <span class="badge bg-warning">Связались</span>
                                    <% } else if (lead.status === 'qualified') { %>
                                    <span class="badge bg-success">Квалифицирован</span>
                                    <% } else if (lead.status === 'lost') { %>
                                    <span class="badge bg-danger">Потерян</span>
                                    <% } else { %>
                                    <span class="badge bg-secondary"><%= (lead.status || 'Неизвестно').charAt(0).toUpperCase() + (lead.status || 'Неизвестно').slice(1) %></span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (lead.created_at) { %>
                                    <%= new Date(lead.created_at).toLocaleDateString('ru-RU') %>
                                    <br><small class="text-muted"><%= new Date(lead.created_at).toLocaleTimeString('ru-RU', {hour: '2-digit', minute: '2-digit'}) %></small>
                                    <% } else { %>
                                    <span class="text-muted">Не указана</span>
                                    <% } %>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" onclick="viewLead('<%= lead.id %>')">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-outline-success" onclick="contactLead('<%= lead.id %>')">
                                            <i class="bi bi-telephone"></i>
                                        </button>
                                        <button class="btn btn-outline-secondary" onclick="editLead('<%= lead.id %>')">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <h4 class="mt-3 text-muted">Нет обращений</h4>
                    <p class="text-muted">Здесь будут отображаться все обращения клиентов</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addLeadModal">
                        <i class="bi bi-plus"></i> Добавить первый лид
                    </button>
                </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Add Lead Modal -->
    <div class="modal fade" id="addLeadModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить новый лид</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="addLeadForm">
                        <div class="mb-3">
                            <label class="form-label">Имя клиента *</label>
                            <input type="text" class="form-control" name="customer_name" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Телефон</label>
                                    <input type="tel" class="form-control" name="customer_phone">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" name="customer_email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Источник</label>
                                    <select class="form-select" name="source">
                                        <option value="website">Сайт</option>
                                        <option value="phone">Телефон</option>
                                        <option value="telegram">Telegram</option>
                                        <option value="email">Email</option>
                                        <option value="referral">Рекомендация</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Интерес</label>
                                    <input type="text" class="form-control" name="interest" placeholder="Например: Тур в Турцию">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Заметки</label>
                            <textarea class="form-control" name="notes" rows="3"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" onclick="submitLead()">Добавить лид</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function submitLead() {
            const form = document.getElementById('addLeadForm');
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            try {
                const response = await fetch('/api/leads', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Лид успешно добавлен!');
                    window.location.reload();
                } else {
                    alert('Ошибка: ' + result.error);
                }
            } catch (error) {
                alert('Произошла ошибка: ' + error.message);
            }
        }
        
        function viewLead(id) {
            alert('Просмотр лида: ' + id);
        }
        
        function contactLead(id) {
            alert('Связаться с лидом: ' + id);
        }
        
        function editLead(id) {
            alert('Редактировать лида: ' + id);
        }
    </script>
</body>
</html>