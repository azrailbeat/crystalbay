    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentConversation = null;
        let currentChannel = 'all';
        
        document.addEventListener('DOMContentLoaded', function() {
            loadStatus();
            loadConversations();
            loadStats();
            
            setInterval(refreshMessages, 30000);
            
            document.querySelectorAll('.channel-tab').forEach(tab => {
                tab.addEventListener('click', function() {
                    document.querySelectorAll('.channel-tab').forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    currentChannel = this.dataset.channel;
                    loadConversations();
                });
            });
            
            document.getElementById('message-input').addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });
        });
        
        async function loadStatus() {
            try {
                const response = await fetch('/api/messages/status');
                const data = await response.json();
                
                if (data.success) {
                    updateIntegrationsStatus(data.status);
                }
            } catch (error) {
                console.error('Error loading status:', error);
            }
        }
        
        function updateIntegrationsStatus(status) {
            const container = document.getElementById('integrations-status');
            const connectors = status.connectors || {};
            
            let html = '';
            
            if (connectors.telegram) {
                const tgStatus = connectors.telegram.connected ? 'online' : 'offline';
                const tgText = connectors.telegram.connected ? 'Подключен' : 'Не подключен';
                html += `
                    <div class="info-item">
                        <span class="info-label"><i class="bi bi-telegram"></i> Telegram</span>
                        <span class="info-value"><span class="status-indicator ${tgStatus}"></span> ${tgText}</span>
                    </div>
                `;
            }
            
            if (connectors.wazzup) {
                const waStatus = connectors.wazzup.connected ? 'online' : 'offline';
                const waText = connectors.wazzup.connected ? 'Подключен' : 'Не подключен';
                html += `
                    <div class="info-item">
                        <span class="info-label"><i class="bi bi-whatsapp"></i> WhatsApp</span>
                        <span class="info-value"><span class="status-indicator ${waStatus}"></span> ${waText}</span>
                    </div>
                `;
            }
            
            container.innerHTML = html || '<p class="text-muted">Нет данных</p>';
        }
        
        async function loadConversations() {
            try {
                let url = '/api/messages/conversations';
                if (currentChannel !== 'all') {
                    url += `?channel=${currentChannel}`;
                }
                
                const response = await fetch(url);
                const data = await response.json();
                
                if (data.success) {
                    renderConversations(data.conversations);
                }
            } catch (error) {
                console.error('Error loading conversations:', error);
            }
        }
        
        function renderConversations(conversations) {
            const container = document.getElementById('conversations-list');
            
            if (!conversations || conversations.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>Нет диалогов</h5>
                        <p>Входящие сообщения появятся здесь</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = conversations.map(conv => `
                <div class="conversation-item ${conv.id === currentConversation?.id ? 'active' : ''}" 
                     onclick="selectConversation('${conv.id}', '${conv.channel}', '${conv.external_chat_id}')">
                    <div class="conversation-header">
                        <div class="conversation-name">
                            <span class="channel-icon ${conv.channel}">
                                <i class="bi bi-${conv.channel === 'telegram' ? 'telegram' : 'whatsapp'}"></i>
                            </span>
                            ${conv.participant_name || 'Неизвестный'}
                        </div>
                        <span class="conversation-time">${formatTime(conv.last_message_at)}</span>
                    </div>
                    <div class="conversation-preview">
                        ${conv.participant_phone || conv.external_chat_id || 'Нет сообщений'}
                    </div>
                </div>
            `).join('');
        }
        
        async function selectConversation(id, channel, chatId) {
            currentConversation = { id, channel, chat_id: chatId };
            
            document.querySelectorAll('.conversation-item').forEach(item => {
                item.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            document.getElementById('chat-header').style.display = 'flex';
            document.getElementById('chat-input-area').style.display = 'block';
            
            try {
                const response = await fetch(`/api/messages/conversations/${id}`);
                const data = await response.json();
                
                if (data.success) {
                    renderMessages(data.messages);
                    
                    const conv = event.currentTarget;
                    document.getElementById('contact-name').textContent = 
                        conv.querySelector('.conversation-name').textContent.trim();
                    document.getElementById('contact-channel').textContent = 
                        channel.charAt(0).toUpperCase() + channel.slice(1);
                    document.getElementById('contact-avatar').textContent = 
                        (conv.querySelector('.conversation-name').textContent.trim()[0] || 'A').toUpperCase();
                }
            } catch (error) {
                console.error('Error loading messages:', error);
            }
        }
        
        function renderMessages(messages) {
            const container = document.getElementById('chat-messages');
            
            if (!messages || messages.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="bi bi-chat-square"></i>
                        <p>Нет сообщений в этом диалоге</p>
                    </div>
                `;
                return;
            }
            
            messages.reverse();
            
            container.innerHTML = messages.map(msg => `
                <div class="message ${msg.direction === 'in' ? 'incoming' : 'outgoing'}">
                    <div class="message-content">${escapeHtml(msg.content)}</div>
                    <div class="message-meta">${formatTime(msg.created_at)}</div>
                </div>
            `).join('');
            
            container.scrollTop = container.scrollHeight;
        }
        
        async function sendMessage() {
            if (!currentConversation) {
                alert('Выберите диалог');
                return;
            }
            
            const input = document.getElementById('message-input');
            const message = input.value.trim();
            
            if (!message) return;
            
            const sendBtn = document.getElementById('send-btn');
            sendBtn.disabled = true;
            
            try {
                const response = await fetch('/api/messages/send', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        channel: currentConversation.channel,
                        chat_id: currentConversation.chat_id,
                        message: message
                    })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    input.value = '';
                    
                    const container = document.getElementById('chat-messages');
                    container.innerHTML += `
                        <div class="message outgoing">
                            <div class="message-content">${escapeHtml(message)}</div>
                            <div class="message-meta">${formatTime(new Date().toISOString())}</div>
                        </div>
                    `;
                    container.scrollTop = container.scrollHeight;
                } else {
                    alert('Ошибка отправки: ' + (data.error || 'Неизвестная ошибка'));
                }
            } catch (error) {
                alert('Ошибка: ' + error.message);
            } finally {
                sendBtn.disabled = false;
            }
        }
        
        async function loadStats() {
            try {
                const response = await fetch('/api/messages/stats');
                const data = await response.json();
                
                if (data.success && data.stats) {
                    let totalConversations = 0;
                    let totalUnread = 0;
                    
                    for (const channel of Object.values(data.stats)) {
                        totalConversations += channel.total_conversations || 0;
                        totalUnread += channel.unread_messages || 0;
                    }
                    
                    document.getElementById('stat-conversations').textContent = totalConversations;
                    document.getElementById('stat-unread').textContent = totalUnread;
                    document.getElementById('badge-all').textContent = totalUnread;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }
        
        async function initializeConnectors() {
            try {
                const response = await fetch('/api/messages/initialize', { method: 'POST' });
                const data = await response.json();
                
                if (data.success) {
                    alert('Коннекторы инициализированы!');
                    loadStatus();
                } else {
                    alert('Ошибка: ' + JSON.stringify(data.result));
                }
            } catch (error) {
                alert('Ошибка: ' + error.message);
            }
        }
        
        function refreshMessages() {
            loadConversations();
            loadStats();
            if (currentConversation) {
                selectConversation(currentConversation.id, currentConversation.channel, currentConversation.chat_id);
            }
        }
        
        function createLeadFromChat() {
