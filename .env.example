# Crystal Bay Travel - Переменные окружения

# =================================
# DATABASE CONFIGURATION
# =================================
# PostgreSQL database connection
DATABASE_URL=postgresql://crystal_bay:crystal_bay_password@db:5432/crystal_bay_db

# =================================
# REQUIRED API KEYS
# =================================

# OpenAI API Key (ОБЯЗАТЕЛЬНЫЙ)
# Получить можно на: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Telegram Bot Token (ОБЯЗАТЕЛЬНЫЙ)
# Получить можно у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =================================
# OPTIONAL API KEYS
# =================================

# Wazzup24 API Key (Опционально)
# Для многоканальных коммуникаций
# Получить на: https://wazzup24.ru
WAZZUP_API_KEY=your_wazzup_api_key

# SAMO Travel OAuth Token (Опционально)
# Для интеграции с Crystal Bay SAMO API
# Получить у представителей Crystal Bay
SAMO_OAUTH_TOKEN=your_samo_oauth_token

# Supabase Configuration (Опционально)
# Для дополнительной базы данных
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_api_key

# SendGrid API Key (Опционально)
# Для отправки email уведомлений
SENDGRID_API_KEY=your_sendgrid_api_key

# =================================
# SECURITY SETTINGS
# =================================

# Flask Session Secret Key (ОБЯЗАТЕЛЬНЫЙ)
# Генерируйте надежный ключ для production
SESSION_SECRET=your-very-secure-session-secret-key-change-in-production

# =================================
# APPLICATION SETTINGS
# =================================

# Flask Environment
FLASK_ENV=production

# Application Debug Mode (только для разработки)
FLASK_DEBUG=false

# =================================
# EXTERNAL SERVICES
# =================================

# Proxy Configuration (если необходимо)
PROXY_HOST=your_proxy_host
PROXY_PORT=your_proxy_port
PROXY_USER=your_proxy_username
PROXY_PASS=your_proxy_password

# Bitrix24 Integration (Опционально)
BITRIX24_DOMAIN=your_bitrix24_domain
BITRIX24_API_KEY=your_bitrix24_api_key

# =================================
# DEPLOYMENT SETTINGS
# =================================

# Домен для production развертывания
DOMAIN_NAME=crystalbay.travel

# SSL Certificate paths (для Nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =================================
# MONITORING & LOGGING
# =================================

# Log Level
LOG_LEVEL=INFO

# Sentry DSN для мониторинга ошибок (Опционально)
SENTRY_DSN=your_sentry_dsn

# =================================
# ИНСТРУКЦИИ ПО НАСТРОЙКЕ
# =================================

# 1. Скопируйте этот файл как .env:
#    cp .env.example .env
#
# 2. Заполните ОБЯЗАТЕЛЬНЫЕ поля:
#    - OPENAI_API_KEY
#    - TELEGRAM_BOT_TOKEN
#    - SESSION_SECRET
#
# 3. Опционально настройте дополнительные интеграции
#
# 4. Запустите систему:
#    docker-compose up -d
#
# ВАЖНО: Никогда не коммитьте файл .env в git!